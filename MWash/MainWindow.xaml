<Window x:Class="MWash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        xmlns:local="clr-namespace:MWash"
        mc:Ignorable="d"
        Title="MWash" Height="775" Width="1100">

    <Window.Resources>
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="540"/>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}"
      Grid.Row="6"
              Height="525"
      x:Name="ProductDataGrid">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="№" IsReadOnly="True" CanUserResize="False" Width="300"/>


                    <DataGridTextColumn Header="Employee" CanUserResize="False" IsReadOnly="True" Width="*" Binding="{Binding Employee}"/>
                    <DataGridTextColumn Header="Service" CanUserResize="False" IsReadOnly="True" Width="*" Binding="{Binding Service}"/>
                    <DataGridTextColumn Header="Price" CanUserResize="False" IsReadOnly="True" Width="*" Binding="{Binding Price}"/>

                    <DataGridTextColumn Header="Time" CanUserResize="False" IsReadOnly="True" Width="*">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Time"  StringFormat="dd MMMM , yyyy"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>                    

                    <DataGridTemplateColumn Header="Remove" CanUserResize="False" IsReadOnly="True" Width="auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button  Style="{DynamicResource closeButtonStyle}"  
                             Width="20"
                             Height="20"
                             BorderBrush="#FFE94D4D"                           
                             Background="Transparent"
                             BorderThickness="3"                           
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             Margin="5 0 0 0">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Button Grid.Row = "1" 
                Width="280" 
                HorizontalAlignment="Right" 
                Margin="20,20,40,20" 
                Content="Додати послугу"
                FontSize="20"
                FontWeight="DemiBold"
                Background="#96BBF3"
                BorderThickness="1.5"
                BorderBrush="#000000">

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column ="0" 
                    Height="50"
                    Content="Звіт" 
                    FontSize="20"
                    FontWeight="DemiBold"
                    Margin="45,0,45,0"
                    Background="#96BBF3"
                    BorderThickness="1.5"
                    BorderBrush="#000000">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Grid.Column ="1" 
                    Height="50"
                    Content="Зарплата"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Margin="45,0,45,0"
                    Background="#96BBF3"
                    BorderThickness="1.5"
                    BorderBrush="#000000"
                    Click="openSalaryButton_Click">

                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
            </Button>

            <Button Grid.Column ="2" 
                    Height="50"
                    Content="Керування"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Margin="45,0,45,0"
                    Background="#96BBF3"
                    BorderThickness="1.5"
                    BorderBrush="#000000">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>
        <!--тут міняєш опасіті на 1 шоб бачити шо редачиш а потмі назад на 0 перед запуском проги. відкривається на кнопку зарплата я вже підключила-->
        <Grid x:Name="Salary" Grid.RowSpan="3" Grid.Row="0"  Opacity="0" IsHitTestVisible="False">
            <Button Background="#000000" 
                    Opacity="0.3" 
                    Click="exitSalaryButton_Click" 
                    Style="{StaticResource NoHoverButtonStyle}"/>
            
            <Border Background="#fff" Width="300" Height="300" CornerRadius="15">
                <Grid>
                    <!--тут пишеш все решту кнопки і тд-->
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
